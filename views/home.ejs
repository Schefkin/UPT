                <td>
                    <%= data.hum %>%
                </td>
                <td><%= createdAtDate.getDate() %>-<%= createdAtDate.getMonth() + 1 %>-<%= createdAtDate.getFullYear() %></td>

            </tr>
        <% } %>
        </tbody>
    </table>

    

